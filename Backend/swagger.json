{
  "openapi": "3.0.0",
  "info": {
    "title": "Swagger idk",
    "version": "1.0.0",
    "description": "Endpoints"
  },
  "paths": {
    "/api/user/register": {
      "post": {
        "summary": "Register a new user",
        "tags": ["User"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["username", "password", "secPassword"],
                "properties": {
                  "username": { "type": "string" },
                  "password": { "type": "string" },
                  "secPassword": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "User created" },
          "400": { "description": "Invalid input" },
          "409": { "description": "Username already taken" }
        }
      }
    },
    "/api/user/login": {
      "post": {
        "summary": "Login a user",
        "tags": ["User"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["username", "password"],
                "properties": {
                  "username": { "type": "string" },
                  "password": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Login successful" },
          "401": { "description": "Invalid credentials" }
        }
      }
    },
    "/api/user": {
      "get": {
        "summary": "Get current user info",
        "tags": ["User"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "User info" },
          "401": { "description": "Unauthorized" }
        }
      }
    },
    "/api/book/search/{title}": {
      "get": {
        "summary": "Search for books",
        "tags": ["Books"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "title",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": { "description": "Books found" },
          "400": { "description": "Missing title" },
          "500": { "description": "Google API error" }
        }
      }
    },
    "/api/book": {
      "post": {
        "summary": "Assign book to user",
        "tags": ["Books"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["googleId"],
                "properties": {
                  "googleId": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Book assigned" },
          "400": { "description": "Missing or duplicate" },
          "404": { "description": "Book not found" }
        }
      }
    },
    "/api/book/dashboard": {
      "get": {
        "summary": "Get all user's books",
        "tags": ["Books"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "List of books" }
        }
      }
    },
    "/api/book/{bookId}": {
      "delete": {
        "summary": "Remove a book from user's list",
        "tags": ["Books"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "bookId",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": { "description": "Book deleted" },
          "404": { "description": "Book not found" }
        }
      }
    },
    "/api/note": {
      "put": {
        "summary": "Edit note for a book",
        "tags": ["Notes"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["body", "bookId"],
                "properties": {
                  "body": { "type": "string" },
                  "bookId": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Note updated" },
          "400": { "description": "Missing input" },
          "404":{ "description": "Note not exists" }
        }
      }
    },
    "/api/note/{bookId}": {
      "get": {
        "summary": "Get note for a specific book",
        "tags": ["Notes"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "bookId",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": { "description": "Note retrieved" },
          "400": { "description": "Invalid bookId" }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "tags": [
    { "name": "User", "description": "User registration and login" },
    { "name": "Books", "description": "Book search and assignment" },
    { "name": "Notes", "description": "Add or get user notes for a book" }
  ]
}
